<section>
  <img class="hero" src="/hero.avif">
  <div class="heroText">
    <p>“Cásate con quien te mire como si fueras magia”</p>
    <span>Frida Khalo</span>
  </div>
</section>
<style>
  section {
    color: #455439;
    position: relative;
    width: 100%;
    overflow: hidden;
    @media (width < 600px) {      
      display: flex;
      flex-direction: column;
      align-items: center;
    }
  }
  .hero {
    width: 100%;
    object-fit: contain;
    opacity: 0.7;
  }
  .heroText {
    position: absolute;
    bottom: 15%;
    right: 50px;
    z-index: 10;
    font-size: 36px;
    font-weight: 600;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: end;
    text-shadow: 1px 1px 1px black;
    
    @media (width < 1200px) {      
      font-size: 24px;
      width: 400px;
    }
    @media (width < 600px) {      
      font-size: 18px;
      right: unset;
      width: 100%;
    }
    
    p {
      padding-right: 100px;
      width: 500px;
      margin: 0 0 20px 0;
      @media (width < 1200px) {      
        padding-right: 0;
        width: 400px;
      }
      @media (width < 600px) {      
        width: 100%;
        padding: 10px;
        box-sizing: border-box;
      }
    }
    span {
      padding-right: 100px;
      width: 500px;
      font-style: italic;
      @media (width < 1200px) {      
        padding-right: 0;
        width: 400px;
      }
      @media (width < 600px) {      
        width: 100%;
        padding: 10px;
        box-sizing: border-box;
      }
    }
  }
</style>
